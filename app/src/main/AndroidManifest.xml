<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.gpacalculator" >

    <uses-sdk android:minSdkVersion="21" />

    <android:uses-permission
        android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        android:maxSdkVersion="18" />
    <android:uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <android:uses-permission
        android:name="android.permission.READ_EXTERNAL_STORAGE"
        android:maxSdkVersion="18" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".ViewSubjectsActivity"
            android:label="@string/app_name"
            android:parentActivityName=".ViewSubjectsActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ViewSubjectsActivity"/>
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".AddAssignmentActivity"
            android:label="@string/title_activity_new_assignment" >
        </activity>
        <activity
            android:name=".EditAssignmentActivity"
            android:label="@string/title_activity_edit_assignment" >
        </activity>
        <activity
            android:name=".MainSubjectActivity"
            android:label="@string/title_activity_main_subject" >
        </activity>
    </application>

</manifest>
